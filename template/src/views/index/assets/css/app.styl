:root
  {apply-colors}

html
  height 100%

main
  display flex
  flex-flow column

  > :last-child
    margin-top auto

#app
main
body
  min-height 100%

.container
  width 100%
  margin _ auto

  +media('xs')
    padding _ 17px

  +media('sm')
    max-width 700px

  +media('md')
    max-width 900px

  +media('lg')
    max-width 1100px

*
  box-sizing border-box

.flex-center
  flex center

.fetcher-error
  pallete 2
  color color-text-light
  padding 17px
  flex center
