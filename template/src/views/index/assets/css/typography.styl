html
  font-size 112.5%
  line-height 1.56em

body
  font-weight 400
  font-family 'Source Sans Pro', sans-serif
  word-wrap break-word
  color color-text-dark
p
  margin-bottom 1.56rem

h1
  @extends p
  color hsla(raw-pallete(4), .85)
  font-family Source Sans Pro, sans-serif
  font-weight 200
  text-rendering optimizeLegibility
  font-size 2rem
  line-height 2.34rem

h2
  @extends h1
  font-size 1.51572rem

h3
  @extends h1
  font-size 1.31951rem
  line-height 1.56rem

h4
  @extends h3
  font-size 1rem

h5
  @extends h3
  font-size 0.87055rem

h6
  @extends h3
  font-size 0.81225rem


a
  color pallete(1)
  text-decoration none

  &:hover
    color pallete(2)

  &.router-link-exact-active
    color pallete(2)

strong
  display inline-block
  font-weight 700

small
  display inline-block
  font-size 80%

ul
ol
  margin _ _ 1.56rem 1.56rem

  > li
    margin _ _ 1.56rem / 2

pre
kbd
  background pallete(3)
  color pallete(5)
  border-radius 3px
  padding 0.2rem _

  font-family Consolas, Roboto Mono, Liberation Mono, Menlo, Courier, monospace
  font-size 0.85rem
  line-height 1.56rem
  white-space pre

pre
  padding 1.56rem

blockquote
  margin _ 1.56rem 1.56rem _
  padding _ _ 1.17rem
  font-size 1.1487rem
  line-height 1.56rem
  color hsla(raw-pallete(4), .6)
  border-left 0.39rem solid hsla(raw-pallete(4), .13)


.text-left
  text-align left

.text-center
  text-align center

.text-right
  text-align right
