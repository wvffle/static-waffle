for n in (0..9)
  pad = n * 10 + 7

  .pad-{pad}
  .p-{pad}
    padding pad * 1px

  .pad-top-{pad}
  .pt-{pad}
    padding-top pad * 1px

  .pad-right-{pad}
  .pr-{pad}
    padding-right pad * 1px

  .pad-bottom-{pad}
  .pb-{pad}
    padding-bottom pad * 1px

  .pad-left-{pad}
  .pl-{pad}
    padding-left pad * 1px

  .pad-h-{pad}
  .ph-{pad}
    padding _ pad * 1px

  .pad-v-{pad}
  .pv-{pad}
    padding pad * 1px _
