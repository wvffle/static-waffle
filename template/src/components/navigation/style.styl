header.navigation
  background color-alt
  fixed 0 _ _
  width 100%
  z-index 1

  nav
    display flex
    flex-flow row

    .right
      margin-left auto

    .left
      margin-right auto

    a
      display inline-block
      padding 27px 7px
      color rgba(color-primary, .5)

      &:hover
        color color-primary
        text-decoration none

      &.router-link-active
        color color-primary
